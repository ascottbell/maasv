# maasv-server configuration
# Copy to .env and fill in values

# Server
MAASV_HOST=127.0.0.1
MAASV_PORT=18790
MAASV_LOG_LEVEL=info

# Auth (empty = no auth)
MAASV_API_KEY=

# Database
MAASV_DB_PATH=maasv.db
MAASV_EMBED_DIMS=1024

# LLM provider: "anthropic" or "openai"
MAASV_LLM_PROVIDER=anthropic
MAASV_LLM_API_KEY=sk-ant-...
MAASV_LLM_MODEL=claude-haiku-4-5-20251001

# Embedding provider: "voyage" or "openai"
MAASV_EMBED_PROVIDER=voyage
MAASV_EMBED_API_KEY=pa-...
MAASV_EMBED_MODEL=voyage-3-lite

# Tuning
MAASV_PROTECTED_CATEGORIES=identity,family
MAASV_STALE_DAYS=30
MAASV_SIMILARITY_THRESHOLD=0.95
MAASV_CROSS_ENCODER_ENABLED=false
